<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="80dp" android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Unit Converter"
        android:textSize="45dp"
        android:background="@color/colorPrimaryDark"
        android:textSelectHandleLeft="@color/colorPrimaryDark"/>
</LinearLayout>

<LinearLayout android:layout_width="match_parent" android:layout_height="200dp" android:orientation="horizontal"
    >
<Spinner
    android:id="@+id/spinner"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="20dp"
    android:entries="@array/spinner"

    />

    <EditText

        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/EditText0"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please click into " />

</LinearLayout>
<LinearLayout android:layout_height="60dp" android:layout_width="match_parent" android:orientation="horizontal">
    <TextView android:layout_width="200dp"
        android:layout_height="50dp"
        android:text=" "
        android:id="@+id/text0"
       />

<TextView
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:text=" "
    android:id="@+id/text1"
    android:layout_marginHorizontal="5dp"/>


</LinearLayout>
    <LinearLayout android:layout_height="60dp" android:layout_width="match_parent" android:orientation="horizontal">
        <TextView android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/text2"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/text3"
            android:layout_marginHorizontal="5dp"/>


    </LinearLayout>
    <LinearLayout android:layout_height="60dp" android:layout_width="match_parent" android:orientation="horizontal">
        <TextView android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/text4"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/text5"
            android:layout_marginHorizontal="5dp"/>


    </LinearLayout>
<LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal">

    <Button
        android:id="@+id/button0"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="@mipmap/metre"
        android:textSize="30dp"
        android:onClick="metre"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:onClick="celsius"
        android:textSize="30dp"
        android:background="@mipmap/celsius"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:textSize="30dp"
        android:background="@mipmap/adasg"
        android:onClick="kilograms"
        />


</LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>